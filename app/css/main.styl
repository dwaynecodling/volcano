.losange, .losange div {
  margin: 0 auto;
  transform-origin: 50% 50%;
  overflow: hidden;
  width: 250px;
  height: 250px;
}
.losange {
  transform: rotate(45deg) translateY(10px);
  transform: rotateX(45deg) rotateZ(45deg);
}
.losange .los1 {
  width: 355px;
  height: 355px;
  background: #fff;
  transform: rotateX(45deg) rotateZ(45deg);
  transform: rotate(-45deg) translateY(-74px);
}
.losange .los1 img {
  width: 100%;
  height: auto;
}

.diamond, .diamond div {
    margin: 0 auto;
    transform-origin: 50% 50%;
  overflow: hidden;
  width: 350px;
  height: 350px;
  position: relative;
    z-index: 1;
    margin-top: -11%;
}

.diamond {
    transform: rotate(45deg) translateY(10px);
    transform: rotateX(60deg) rotateZ(45deg);
    background-color: #fff;
    
}

.diamond .diamond-text {

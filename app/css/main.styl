html
   font-family: 'Lato', sans-serif;
h2
	font-weight: 400;   

.opener 
	background: url('/images/splash-screen-1.jpg') no-repeat;
	background-position: 50% 50%;
	background-size: cover;
	position: relative;
	 
nav 
	
	background: #3b3d3b;
	padding: 40px 20px 0 20px;
	
	a 
		text-decoration: none;
		color: #fff;
		padding: 15px 15px 15px 0;
		
	.top-menu 
		
		text-align: right;
		margin-top: 25px;
	
	.logo 
		
		max-width: 100%;
			
	.active 
		background: #f2385a;
		padding: 20px 10px 25px 5px;
	
	.social-media a 
		color:#000;
		padding: 1px;

.content-bg 
	position:relative;
	background: url('/images/content-bg.jpg') no-repeat;
	background-position: 50% 50%;
	background-size: cover;
	height:1050px;
	margin-bottom: 600px;
	

.header
	color: #fff;
	z-index: 2;
	

	
.header p
	font-weight: 300;
	font-size: 	1em;
	line-height: 2em;
		
	
.welcome 
	padding: 30px 20px 0 20px;
	color: #fff;
	
	h2 
		word-break: keep-all;
		font-weight: 300;
		
	
.process
	margin-left: 20px;
	padding: 20px 20px 0 20px;
	background: #4ad9d9;
	img
		float: right;
		
		
	
.branding
	margin-left: 20px;
	padding: 20px 20px 0 20px;
	background: #4cd87b;
	img
		float: right;
			

.web-design
	margin-left: 20px;
	padding: 20px 20px 0 20px;
	background: #595b59;
	img
		float: right;
					
.intro-footer
	background: #4cd87b;
	position: fixed;
	bottom: 5%;
	left: 0;
	width: 100%;
	height: 600px;
	z-index: -1;


	

.diamond
	height: 40%;
	width: 35%;
	margin: 0 auto;
	background-color: #fff;
	margin-top: 200px;
	margin-bottom: 100px;
	border-radius: 15px 50px;
	position: relative;
	h2
		text-align: center;
		padding-top: 70px;
		color: #4cd87b;
		font-size: 3.4em;
		font-weight: 400;
		
